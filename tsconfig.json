{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./lib",
        "downlevelIteration": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "lib": ["es2018", "dom"]
    },
    "exclude": [
        "node_modules",
        "typings",
        "lib",
        "test",
        "browser-test",
        "coverage",
        "examples",
        "d.ts",
        "release",
        "ts/*.ngfactory.ts"
    ]
}
